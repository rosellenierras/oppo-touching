<widget type="IconWidget" label="i18n:icon-title">
  <description>i18n:icon-title-description</description>
  <metadata>
    <property frame="None" selectable="true" refreshable="false" minimizable="false" actionable="true"/>
  </metadata>
  <!-- expects only ONE row in the results -->
  <inputs>
    <param binding="false" type="MultiFieldValue" label="i18n:icon-key-value-pair" name="keys">
      <description>i18n:icon-key-value-pair-description</description>
    </param>
    <param binding="false" type="SingleField" label="i18n:icon-field" name="field">
      <description>i18n:icon-field-description</description>
    </param>
    <param binding="false" type="IconSet" label="i18n:icon-icons" name="icons" style="true">
      <description>i18n:icon-icons-description</description>
    </param>
    <param control="true" setting="true" binding="false" type="NumberRangeMap" label="Range Map" name="$range">
      <description>i18n:icon-RangeMap-description</description>
    </param>
    <param control="false" setting="false" label="i18n:icon-value" name="$value">
      <description>i18n:icon-value-description</description>
    </param>
  </inputs>
  <outputs>
    <param setting="true" type="String" label="i18n:icon-identity" name="identity">
      <description>i18n:icon-identity-description</description>
    </param>
    <param setting="true" type="String" label="i18n:icon-properties" name="properties">
      <description>i18n:icon-properties-description</description>
    </param>
  </outputs>
</widget>
