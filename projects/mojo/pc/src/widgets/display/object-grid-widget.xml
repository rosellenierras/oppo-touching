<widget type="ObjectGridWidget" label="i18n:objectGrid-title">
  <description>i18n:objectGrid-title-description</description>
  <metadata>
    <metadata param="$object.grid.arg"/>
    <property refreshable="false"/>
  </metadata>
  <inputs>
    <param setting="false" label="i18n:objectGrid-values" name="$object.grid.arg">
      <description>i18n:objectGrid-values-description</description>
    </param>
    <param binding="false" setting="true" type="Widget" label="i18n:objectGrid-nested-widget-name" name="$object.grid.widget">
      <description>i18n:objectGrid-nested-widget-name-description</description>
    </param>
    <param binding="false" setting="true" type="XPathField" label="i18n:objectGrid-value-field-xpath" name="$object.grid.valueField">
      <description>i18n:objectGrid-valueField-description</description>
    </param>
    <param binding="false" setting="true" type="XPathField" label="i18n:objectGrid-label-field-xpath" name="$object.grid.labelField">
      <description>i18n:objectGrid-title-labelField</description>
    </param>
    <param binding="false" setting="true" value="3" max="20" min="0" type="Number" label="i18n:objectGrid-number-of-columns" name="$object.grid.numColumns">
      <description>i18n:objectGrid-number-of-columns-description</description>
    </param>
    <param binding="false" setting="true" value="0" max="20" min="0" type="Number" label="i18n:objectGrid-number-of-rows" name="$object.grid.numRows">
      <description>i18n:objectGrid-number-of-rows-description</description>
    </param>
    <param binding="false" setting="true" value="None" type="Frame" label="i18n:objectGrid-frame-style" name="$object.grid.frameStyle">
      <description>i18n:objectGrid-frame-style-description</description>
    </param>
    <param binding="false" type="Enumeration" label="i18n:objectGrid-non-framed-label" name="$object.grid.altLabel">
      <description>i18n:objectGrid-non-framed-label-description</description>
      <choice label="i18n:objectGrid-none" data="none"/>
      <choice label="i18n:objectGrid-top" data="top"/>
      <choice label="i18n:objectGrid-bottom" data="bottom"/>
      <choice label="i18n:objectGrid-left" data="left"/>
      <choice label="i18n:objectGrid-right" data="right"/>
    </param>
  </inputs>
</widget>
