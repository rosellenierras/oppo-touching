<widget type="OrgChartWidget" label="i18n:orgchart-title">

  <description>i18n:orgchart-desc</description>

  <inputs>
  	<param name="data" label="i18n:orgchart-data" setting="false" control="false">
  	    <description>i18n:orgchart-data-desc</description>
  	</param>
  	<param name="showDesc" value="false" label="i18n:orgchart-showDesc" type="boolean" binding="false" control="false">
  	    <description>i18n:orgchart-showDesc-desc</description>
  	</param>
    <param type="enumeration" label="i18n:orgchart-orientation" name="orientation" value="vertical" binding="false" control="false">
       <description>i18n:orgchart-orientation-desc</description>
       <choice label="Vertical" data="vertical"/>
       <choice label="Horizontal" data="horizontal"/>
    </param>
    <param name="nodeColor" value="0x8888FF" type="Color" label="i18n:orgchart-nodeColor" binding="false" control="false">
      <description>i18n:orgchart-nodeColor-desc</description>
    </param>
    <param name="nodeAlpha" value="0.5" min="0.0" max="1.0" step="0.1" type="Number" label="i18n:orgchart-nodeAlpha" control="false" binding="false">
      <description>i18n:orgchart-nodeAlpha-desc</description>
    </param>
    <param name="highlightColor" value="0x0000FF" type="Color" label="i18n:orgchart-highlightColor" binding="false" control="false">
      <description>i18n:orgchart-highlightColor-desc</description>
    </param>
    <param name="borderColor" value="0x999999" type="Color" label="i18n:orgchart-borderColor" binding="false" control="false">
      <description>i18n:orgchart-borderColor-desc</description>
    </param>
  </inputs>

  <outputs>
  	<param name="selected" label="i18n:orgchart-selected">
  	  <description>i18n:orgchart-selected-desc</description>
  	</param>
  </outputs>

</widget>
