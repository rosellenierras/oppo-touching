<widget type="VariableWidget" label="i18n:variable-title">

  <description><![CDATA[Variables for storing and forwarding values without wires. Different scoping of variables determine its persistence and visibility.]]></description>

  <metadata>
    <size width="40" height="40" type="fixed"/>
    <property frame="RoundedBox" visible="Never" visual="false" refreshable="true" hidden="true"/>
    <metadata passThru="$set"/>
  </metadata>

  <inputs>

    <param name="$operation" value="VARIABLE" setting="false" binding="false" control="false"/>

    <param control="false" binding="false" setting="true" type="Enumeration" value="page" label="i18n:variable-scope" name="$scope">
		<description><![CDATA[Scope of variable]]></description>
		<choice label="i18n:variable-scope-page" data="page"/>
		<choice label="i18n:variable-scope-session" data="session"/>
		<choice label="i18n:variable-scope-cookie" data="cookie"/>
		<choice label="i18n:variable-scope-user" data="user"/>
    </param>

    <param setting="false" label="i18n:variable-set" name="$set">
      <description><![CDATA[Set value of parameter]]></description>
    </param>

  </inputs>
  <outputs>

    <param setting="false" label="i18n:variable-get" name="$get">
      <description><![CDATA[Get value of parameter]]></description>
    </param>

  </outputs>

</widget>
