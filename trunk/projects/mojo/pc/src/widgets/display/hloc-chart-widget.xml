<widget type="HLOCChartWidget" label="i18n:hlocChart-title">
  <description>i18n:HLOC-Chart-Description</description>
  <metadata>
    <property refreshable="false" inspectable="true" actionable="true"/>
    <metadata passThru="$results"/>
  </metadata>
  <inputs>
    <param control="false" setting="false" label="i18n:hlocChart-results" name="$results">
       <description>i18n:Chart-results-Description</description>
    </param>
    <param binding="false" type="MultiGroup" label="i18n:hlocChart-axis-labels" name="labels">
       <description>i18n:X-axis-labels-Description</description>
    </param>
    <param binding="false" type="SingleField" label="i18n:hlocChart-high" name="$high">
       <description>i18n:Chart-high-Description</description>
    </param>
    <param binding="false" type="SingleField" label="i18n:hlocChart-low" name="$low">
       <description>i18n:Chart-low-Description</description>    
    </param>
    <param binding="false" type="SingleField" label="i18n:hlocChart-open" name="$open">
       <description>i18n:Chart-open-Description</description>
    </param>
    <param binding="false" type="SingleField" label="i18n:hlocChart-close" name="$close">
       <description>i18n:Chart-close-Description</description>
    </param>
    <param control="false" setting="true" label="i18n:hlocChart-info" name="$info">
       <description>i18n:Chart-info-Description</description>
    </param>
    <param control="false" binding="false" value="0" min="0" max="5" type="Number" label="i18n:number-precision" name="numberPrecision" style="true">
      <description>i18n:Chart-number-presision-Description</description>
    </param>
    <param control="false" type="String" setting="true" label="i18n:upperThreshold-value" name="upperThreshold">
      <description>i18n:Chart-upperThreshold-value-Description</description>
    </param>
    <param control="false" type="String" setting="true" label="i18n:lowerThreshold-value" name="lowerThreshold">
      <description>i18n:Chart-lowerThreshold-value-Description</description>
    </param>
    <param control="false" binding="false" type="Style" label="Style" name="$style" style="true">
      <description>i18n:Chart-style-Description</description>
    </param>
    <param control="false" type="String" binding="false" label="Max Value" name="maxValue">
      <description>i18n:Y-Max-value-Description</description>
    </param>
    <param control="false" type="String" binding="false" label="Min Value" name="minValue">
      <description>i18n:Y-Min-value-Description</description>
    </param>
  </inputs>
  <outputs>
    <param label="i18n:barChart-selected-row" name="selected" type="record">
       <description>i18n:Chart-selected-row-Description</description>
    </param>
    <param label="i18n:hlocChart-selected-high" name="$high">
       <description>i18n:Chart-selected-high-Description</description>
    </param>
    <param label="i18n:hlocChart-selected-low" name="$low">
       <description>i18n:Chart-selected-low-Description</description>
    </param>
    <param label="i18n:hlocChart-selected-open" name="$open">
       <description>i18n:Chart-selected-open-Description</description>
    </param>
    <param label="i18n:hlocChart-selected-close" name="$close">
       <description>i18n:Chart-selected-close-Description</description>
    </param>
  </outputs>
</widget>
