<widget type="InputParameterWidget" label="i18n:input-title">
  <description><![CDATA[Defines input parameter for the page when page is used as a widget in another page.]]></description>
  <metadata>
    <size width="40" height="40" type="fixed"/>
    <property frame="RoundedBox" visible="Never" visual="false" refreshable="false" hidden="true"/>
  </metadata>
  <inputs>
    <param name="$operation" value="INPUT" setting="false" binding="false" control="false"/>
    <param control="false" binding="false" type="Enumeration" value="*" label="i18n:input-type" name="$type">
		<description><![CDATA[Parameter data type]]></description>
		<choice label="i18n:input-type-binding" data="*"/>
		<choice label="i18n:input-type-string" data="string"/>
		<choice label="i18n:input-type-date" data="date"/>
		<choice label="i18n:input-type-boolean" data="boolean"/>
		<choice label="i18n:input-type-number" data="number"/>
		<choice label="i18n:input-type-color" data="color"/>
		<choice label="i18n:input-type-runtime-server" data="runtime"/>
		<choice label="i18n:input-type-analytic-server" data="analytic"/>
		<choice label="i18n:input-type-feed-server" data="feed"/>
		<!-- hide these options as they need configuration -->
		<!-- VITR00152608 + VITR00152612 -->
		<!-- choice label="i18n:input-type-numberrangemap" data="numberrangemap"/ -->
		<!-- choice label="i18n:input-type-relativedate" data="relativedate"/ -->
		<!-- choice label="i18n:input-type-relativeseason" data="relativeseason"/ -->
		<!-- choice label="i18n:input-type-colorset" data="colorset"/ -->
		<!-- choice label="i18n:input-type-icon" data="icon"/ -->
		<!-- choice label="i18n:input-type-iconset" data="iconset"/ -->
		<!-- choice label="i18n:input-type-xpathfieldmapping" data="xpathfieldmapping"/ -->
		<!-- choice label="i18n:input-type-pagelink" data="pagelink"/ -->
		<!-- choice label="i18n:input-type-singlefield" data="singlefield"/ -->
		<!-- choice label="i18n:input-type-multifield" data="multifield"/ -->
		<!-- choice label="i18n:input-type-multifieldvalue" data="multifieldvalue"/ -->
		<!-- choice label="i18n:input-type-singlegroup" data="singlegroup"/ -->
		<!-- choice label="i18n:input-type-multigroup" data="multigroup"/ -->
		<!-- choice label="i18n:input-type-multiseries" data="multiseries"/ -->
    </param>
    <param binding="false" control="false" label="i18n:input-default-value" name="$default" type="string">
      <description>Default value for input param</description>
    </param>
  </inputs>
  <outputs>
    <param setting="false" label="" name="$result">
      <description><![CDATA[Propagate value binding from page widget's parameter]]></description>
    </param>
  </outputs>
</widget>
