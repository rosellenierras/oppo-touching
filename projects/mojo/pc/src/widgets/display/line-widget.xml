<widget type="LineWidget" label="i18n:line-title">
  <description>i18n:line-title-description</description>
  <metadata>
    <property frame="None" selectable="true" refreshable="false" minimizable="false" actionable="true"/>
  </metadata>
  <!-- expects only ONE row in the results -->
  <inputs>
    <param binding="false" type="MultiFieldValue" label="i18n:line-key-value-pair" name="keys">
      <description>i18n:line-key-value-pair-description</description>
    </param>
    <param binding="false" type="SingleField" label="i18n:line-value-field" name="field">
      <description>i18n:line-value-field-description</description>
    </param>
    <param binding="false" type="SingleField" label="i18n:line-weight-field" name="weight">
      <description>i18n:line-weight-field-description</description>
    </param>
    <param control="false" binding="false" type="Enumeration" label="i18n:line-style" name="style" style="true">
      <description>i18n:line-style-description</description>
      <choice label="i18n:line-weight" data="Weight"/>
      <choice label="i18n:line-hue" data="Hue"/>
      <choice label="i18n:line-color" data="Color"/>
      <choice label="i18n:line-alpha" data="Alpha"/>
    </param>
    <param control="false" binding="false" type="ColorSet" label="i18n:line-colors" name="colors" style="true">
      <description>i18n:line-colors-description</description>
    </param>
    <param control="false" binding="true" value="0" type="Number" label="i18n:line-minimum-value" name="minimum">
      <description>i18n:line-minimum-value-description</description>
    </param>
    <param control="false" binding="true" value="100" max="10000" type="Number" label="i18n:line-maximum-value" name="maximum">
      <description>i18n:line-maximum-value-description</description>
    </param>
    <param control="false" setting="false" label="i18n:line-value" name="$value">
      <description>i18n:line-value-description</description>
    </param>
    <param control="false" binding="true" max="50" min="0" value="0" type="Number" label="i18n:line-line-thickness" name="thickness" style="true">
      <description>i18n:line-thickness-description</description>
    </param>
    <param control="false" binding="true" value="0" type="Number" label="i18n:line-minimum-weight" name="minWeight">
      <description>i18n:line-minimum-weight-description</description>
    </param>
    <param control="false" binding="true" value="100" max="10000" type="Number" label="i18n:line-maximum-weight" name="maxWeight">
      <description>i18n:line-maximum-weight-description</description>
    </param>
    <param control="false" setting="false" label="i18n:line-weight1" name="$weight">
      <description>i18n:line-weight-description</description>
    </param>
    <param control="false" setting="false" binding="false" label="i18n:line-length" name="$length"/>
    <param control="false" setting="false" binding="false" label="i18n:line-angle" name="$angle"/>
  </inputs>
  <outputs>
    <param setting="true" type="String" label="i18n:line-identity" name="identity">
      <description>i18n:line-identity-description</description>
    </param>
    <param setting="true" type="String" label="i18n:line-properties" name="properties">
      <description>i18n:line-properties-description</description>
    </param>
  </outputs>
</widget>
