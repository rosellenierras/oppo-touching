<widget type="com.vitria.opbook.widgets.workflow.TaskControlWidget" label="i18n:task-control-widget-title">

	<description>i18n:task-control-widget-desc</description>

    <metadata>
       <property inspectable="true" actionable="true"/>
    </metadata>

    <inputs>
        <param binding="false" type="enumeration" label="i18n:task-control-widget-layout" name="layoutChoice" value="horizontal">
            <description>i18n:task-control-widget-layout-description</description>
            <choice label="i18n:task-control-widget-layout-horizontal" data="horizontal"/>
            <choice label="i18n:task-control-widget-layout-vertical" data="vertical"/>
        </param>
        <param name="opData" label="i18n:task-control-widget-operation-data" setting="false" control="false">
            <description>i18n:task-control-widget-operation-data-description</description>
        </param>   
        <param name="controlAction" label="i18n:task-control-widget-action" setting="false" control="false" >
            <description>i18n:task-control-widget-action-description</description>
        </param>  		
    </inputs>
  
    <outputs>
		<param name="query" label="i18n:task-control-widget-query" setting="false" control="false">
            <description>i18n:task-control-widget-query-description</description>
        </param>				       
        <param name="aActions" label="i18n:task-control-widget-available-actions" setting="false" control="false">
            <description>i18n:task-control-widget-available-actions-description</description>
        </param>
        <param name="vActions" label="i18n:task-control-widget-visible-actions" setting="false" control="false">
            <description>i18n:task-control-widget-visible-actions-description</description>
        </param>
		<param name="eMessage" label="i18n:task-control-widget-error-message" setting="false" control="false">
            <description>i18n:task-control-widget-error-message-description</description>
        </param>
    </outputs>
  
</widget>
