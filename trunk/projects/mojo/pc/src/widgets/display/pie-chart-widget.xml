<widget type="PieChartWidget" label="i18n:pieChart-title">
  <description>
  i18n:Pie-Chart-Description
  </description>
  <metadata>
    <property refreshable="false" inspectable="true" actionable="true"/>
    <metadata passThru="$results"/>
  </metadata>
  <inputs>
    <param control="false" setting="false" label="i18n:pieChart-results" name="$results">
       <description>i18n:Chart-results-Description</description>
    </param>
    <param binding="false" type="MultiField" label="i18n:pieChart-fields" name="$fields">
       <description>i18n:Chart-fields-Description</description>
    </param>
    <param binding="false" type="MultiField" label="i18n:pieChart-series" name="series">
       <description>i18n:Chart-series-Description</description>
    </param>
    <param binding="false" type="MultiGroup" label="i18n:pieChart-labels" name="labels">
       <description>i18n:pie-chart-labels-Description</description>
    </param>
    <param binding="false" type="String" label="i18n:pieChart-series-values" name="values">
       <description>i18n:Chart-series-values-Description</description>
    </param>
    <param control="false" setting="true" label="i18n:pieChart-info" name="$info">
       <description>i18n:Chart-info-Description</description>
    </param>
    <param binding="false" type="Enumeration" label="i18n:pieChart-chart-legend" name="legend" style="true">
       <description>i18n:Chart-legend-Description</description>
       <choice label="i18n:pieChart-hide" data="false"/>
       <choice label="i18n:pieChart-show" data="true"/>
    </param>
    <param binding="false" type="ColorSet" label="i18n:pieChart-colors" name="colors" style="true">
       <description>i18n:Chart-colors-Description</description>
    </param>
    <param binding="false" type="Enumeration" label="i18n:pieChart-label-position" name="labelPosition" value="callout" style="true">
       <description>i18n:pieChart-label-position-Description</description>
       <choice label="i18n:pieChart-auto" data=""/>
       <choice label="i18n:pieChart-none" data="none"/>
       <choice label="i18n:pieChart-inside" data="inside"/>
       <choice label="i18n:pieChart-callout" data="callout"/>
       <choice label="i18n:pieChart-insideWithCallout" data="insideWithCallout"/>
       <choice label="i18n:pieChart-outside" data="outside"/>
    </param>
    <param control="false" binding="false" value="0" min="0" max="5" type="Number" label="i18n:number-precision" name="numberPrecision" style="true">
      <description>i18n:Chart-number-presision-Description</description>
    </param>
    <param control="false" binding="false" type="Style" label="Style" name="$style" style="true">
      <description>i18n:Chart-style-Description</description>
    </param>
  </inputs>
  <outputs>
    <param label="i18n:pieChart-selected-row" name="selected" type="record">
       <description>i18n:pieChart-selected-row-Description</description>
    </param>
    <param label="i18n:columnChart-selected-series" name="series">
       <description>i18n:Chart-selected-series-Description</description>
    </param>
  </outputs>
</widget>