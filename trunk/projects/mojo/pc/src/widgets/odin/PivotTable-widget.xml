<widget type="com.vitria.opbook.widgets.PivotTableWidget" label="i18n:pivottable-title">
	<description>i18n:pivottable-title-description</description>
  <metadata>
    <property refreshable="false"/>
  </metadata>
  <inputs>
    	<param control="false" setting="false" label="i18n:pivottable-results" name="$results">
    	   <description>i18n:pivottable-results-description</description>
	    </param>
		<param name="dimensions" label="i18n:pivottable-dimensions" type="MultiField" binding="false" control="false">
			<description>i18n:pivottable-dimensions-description</description>
		</param>
		<param name="measures" label="i18n:pivottable-measures" type="MultiField" binding="false" control="false">
			<description>i18n:pivottable-measures-description</description>
		</param>
		<param name="columns" label="i18n:pivottable-columns" type="MultiField" choicesField="columns" binding="false" control="false">
			<description>i18n:pivottable-columns-description</description>
		</param>
		<param name="rows" label="i18n:pivottable-rows" type="MultiField" choicesField="rows" binding="false" control="false">
			<description>i18n:pivottable-rows-description</description>
		</param>
		<param name="precision" label="i18n:pivottable-precision" type="Number" binding="false" control="false" min="0" max="7">
			<description>i18n:pivottable-precision-description</description>
		</param>
		<param name="hasAll" label="i18n:pivottable-hasAll" type="Enumeration" binding="false" control="false">
			<description>i18n:pivottable-hasAll-description</description>
			<choice label="i18n:pivottable-no" data="NO"/>
			<choice label="i18n:pivottable-yes" data="YES"/>
		</param>
		<param name="configPanel" label="i18n:pivottable-configPanel" type="Enumeration" binding="false" control="false">
			<description>i18n:pivottable-configPanel-description</description>
			<choice label="i18n:pivottable-show" data="SHOW"/>
			<choice label="i18n:pivottable-hide" data="HIDE"/>
		</param>
	</inputs>
</widget>
