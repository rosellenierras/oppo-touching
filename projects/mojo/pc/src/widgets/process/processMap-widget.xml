<widget type="com.vitria.opbook.widgets.ProcessMapWidget" label="i18n:processMap-title">

	<description>i18n:processMap-title-desc</description>

	<inputs>
		<param name="modelPath" type="string" label="i18n:processMap-modelPath" setting="true" binding ="true" control="false">
		    <description>i18n:processMap-modelPath-desc</description>
		</param>
		<param name="stepIdentification" type="Enumeration" label="i18n:processMap-step-identification" setting="true" binding ="false" control="false" value="1">
		    <description>i18n:processMap-step-identification-desc</description>
		    <choice label="i18n:processMap-step-identification-id" data="0"/>
            <choice label="i18n:processMap-step-identification-name" data="1"/>
		</param>
		<param name="status" label="i18n:processMap-status" binding="true" setting="false" control="false">
		    <description>i18n:processMap-status-desc</description>
		</param>  		
		<param name="stepMetric" type="MetricItem" label="i18n:processMap-step-metric" binding="false">
		    <description>i18n:processMap-step-metric-desc</description>
		</param>
		<param name="summary" label="i18n:processMap-summary" binding="true" setting="false">
		    <description>i18n:processMap-summary-desc</description>
		</param>				
		<param name="summaryMetric" type="MetricItem" label="i18n:processMap-summary-metric" binding="false">
		    <description>i18n:processMap-summary-metric-desc</description>
		</param> 
		<param name="legend" label="i18n:processMap-legend"  type="LegendItem" setting="true" binding ="false" control="false">
		    <description>i18n:processMap-legend-desc</description>
		</param>
	</inputs>
  
	<outputs>
        <param name="selected" label="i18n:processMap-selected-process-metric">
            <description>i18n:processMap-selected-process-metric-desc</description>
		</param>
        <param name="selectedStep" label="i18n:processMap-selected-process-step">
            <description>i18n:processMap-selected-process-step</description>
		</param>		 
	</outputs>
  
</widget>
