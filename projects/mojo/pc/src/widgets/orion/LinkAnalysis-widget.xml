<widget type="com.vitria.opbook.widgets.LinkAnalysisWidget" label="i18n:LinkAnalysis-widget-title">

	<description>i18n:LinkAnalysis-widget-desc</description>
    <metadata>
        <property refreshable="false"/>
    </metadata>
    <inputs>
        <param name="nodes" label="i18n:LinkAnalysis-widget-nodes" setting="false" control="false">
            <description>i18n:LinkAnalysis-widget-nodes-description</description>
        </param>
        <param name="edges" label="i18n:LinkAnalysis-widget-edges" setting="false" control="false">
            <description>i18n:LinkAnalysis-widget-edges-description</description>
        </param>
        <param name="rootNodeId" label="i18n:LinkAnalysis-widget-rootNodeId" type="string" setting="true" control="false">
            <description>i18n:LinkAnalysis-widget-rootNodeId-description</description>
        </param>    
        <param name="degree" label="i18n:LinkAnalysis-widget-degree" type="string" setting="true" control="false">
            <description>i18n:LinkAnalysis-widget-degree-description</description>
        </param>      
        <param name="fields" label="i18n:LinkAnalysis-widget-fields" type="linkanalysisfieldpicker" binding="false" control="false">
            <description>i18n:LinkAnalysis-widget-fields-description</description>
        </param>
        <param name="nodeIcons" label="i18n:LinkAnalysis-widget-nodeIcons" type="enhancediconset" binding="false" control="false">
            <description>i18n:LinkAnalysis-widget-nodeIcons-description</description>
        </param>
        <param name="layout" label="i18n:LinkAnalysis-widget-layout" type="enumeration" value="circle" binding="false" control="false">
            <description>i18n:LinkAnalysis-widget-layout-description</description>
            <choice label="i18n:LinkAnalysis-widget-layout-circle" data="circle"/>
            <choice label="i18n:LinkAnalysis-widget-layout-tree" data="tree"/>
        </param>
        <param name="edgeLabelStyle" label="i18n:LinkAnalysis-widget-edgeLabelStyle" type="enumeration" value="default" binding="false" control="false">
            <description>i18n:LinkAnalysis-widget-edgeLabelStyle-description</description>
            <choice label="i18n:LinkAnalysis-widget-edgeLabelStyle-default" data="default"/>
            <choice label="i18n:LinkAnalysis-widget-edgeLabelStyle-text" data="text"/>
            <choice label="i18n:LinkAnalysis-widget-edgeLabelStyle-shape" data="shape"/>
        </param>
        <param name="optionDialogPosition" label="i18n:LinkAnalysis-widget-optionDialogPosition" type="enumeration" value="top-left" binding="false" control="false">
            <description>i18n:LinkAnalysis-widget-optionDialogPosition-description</description>
            <choice label="i18n:LinkAnalysis-widget-optionDialogPosition-topleft" data="top-left"/>
            <choice label="i18n:LinkAnalysis-widget-optionDialogPosition-topright" data="top-right"/>
            <choice label="i18n:LinkAnalysis-widget-optionDialogPosition-bottomleft" data="bottom-left"/>
            <choice label="i18n:LinkAnalysis-widget-optionDialogPosition-bottomright" data="bottom-right"/>
        </param> 
        <param name="useTestData" label="i18n:LinkAnalysis-widget-useTestData" type="Boolean" binding="false" control="false">
            <description>i18n:LinkAnalysis-widget-useTestData-description</description>
        </param>
        <param name="enableUpdateAnimation" label="i18n:LinkAnalysis-widget-enableUpdateAnimation" type="Boolean" binding="false" control="false" value="true">
            <description>i18n:LinkAnalysis-widget-enableUpdateAnimation-description</description>
        </param>
    </inputs>
  
    <outputs>
        <param name="selectedNodes" label="i18n:LinkAnalysis-widget-selectedNodes" setting="false" control="false" >
            <description>i18n:LinkAnalysis-widget-selectedNodes-description</description>
        </param>        
    </outputs>
  
</widget>
