<widget type="UnifiedServiceWidget" label="Unified Service">
	<description>i18n:unified-service-widget-desc</description>
	<metadata>
	    <property frame="RoundedBox" visible="Never" visual="false" inspectable="true" actionable="true"/>
	</metadata>  
	<inputs>
    	<param binding="false" type="unifiedservice" referencetype="unifiedservice" label="i18n:unified-service-instance" name="$serviceInstance">
       		<description>i18n:unified-service-instance-desc</description>
    	</param>  
	    <param type="relativedate" label="i18n:unified-service-widget-timeout" name="timeOut" control="false" binding="false" value="P1S" max="59" min="1">
	       <description>i18n:unified-service-widget-timeout-desc</description>
	    </param> 	
    	<param name="showProcessButton" value="false" label="i18n:unified-service-widget-show-process" type="boolean" binding="false" control="false">
    	  <description>i18n:unified-service-widget-show-process-desc</description>
    	</param>
	</inputs>
  
	<outputs>
		<param setting="false" label="i18n:unified-service-widget-reponse-result" name="$response">
      		<description>i18n:unified-service-widget-reponse-result-desc</description>
    	</param>
	    <param type="boolean" label="i18n:unified-service-widget-status-flag" name="$statusFlag" setting="false">
	       <description>i18n:unified-service-widget-status-flag-desc</description>
	    </param>
	    <param type="string" label="i18n:unified-service-widget-status-Description" name="$statusDesciption" setting="false">
	       <description>i18n:unified-service-widget-status-Description-desc</description>
	    </param>	    		
	</outputs>
  
</widget>
