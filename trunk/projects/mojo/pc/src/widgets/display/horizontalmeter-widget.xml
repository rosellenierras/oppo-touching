<widget type="HorizontalMeterWidget" label="i18n:horizontalMeter-title">
  <description>i18n:horizontalMeter-title-description</description>  
  <metadata>
    <property refreshable="false" minimizable="false" actionable="true"/>
  </metadata>
  <inputs>
    <param type="Number" setting="false" label="i18n:horizontalMeter-value" name="$value">
       <description>i18n:horizontalMeter-value-description</description>
    </param>
    <param binding="true" type="Number" label="i18n:horizontalMeter-minimum-value" name="minimum">
       <description>i18n:horizontalMeter-minimum-value-description</description>
    </param>
    <param binding="true" type="Number" label="i18n:horizontalMeter-maximum-value" name="maximum" value="100">
       <description>i18n:horizontalMeter-maximum-value-description</description>
    </param>
    <param binding="false" type="Number" label="i18n:horizontalMeter-tick-interval" name="tickInterval" value="1" style="true">
       <description>i18n:horizontalMeter-tick-interval-description</description>
    </param>
    <param binding="false" type="Color" label="i18n:meter-low-color" name="lowColor" style="true">
      <description>i18n:horizontalMeter-low-color-description</description>
    </param>
    <param binding="false" type="Color" label="i18n:meter-normal-color" name="normalColor" style="true">
      <description>i18n:horizontalMeter-normal-color-description</description>
    </param>
    <param binding="false" type="Color" label="i18n:meter-high-color" name="highColor" style="true">
      <description>i18n:horizontalMeter-high-color-description</description>
    </param>
    <param binding="false" type="String" label="i18n:horizontalMeter-meter-label" name="meterLabel" style="true">
       <description>i18n:horizontalMeter-meter-label-description</description>
    </param>
    <param control="false" setting="true" label="i18n:Gauge-info" name="$info">
       <description>i18n:horizontalMeter-info-description</description>
    </param>
  </inputs>
</widget>
