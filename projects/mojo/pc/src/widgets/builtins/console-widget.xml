<widget type="ConsoleWidget" label="i18n:console-title">

  <description>i18n:console-title-description</description>

  <metadata>
    <property refreshable="false"/>
  </metadata>

  <inputs>
    <param name="$level" label="i18n:console-log-type" type="Enumeration" value="error" setting="true" binding="false" control="false">
      <choice label="i18n:console-log-type-error" data="error"/>
      <choice label="i18n:console-log-type-warn" data="warn"/>
      <choice label="i18n:console-log-type-info" data="info"/>
      <description>i18n:console-log-type-description</description>
    </param>
    <param name="$category" label="i18n:console-log-category" type="Enumeration" value="user" setting="true" binding="false" control="false">
      <choice label="i18n:console-log-category-user" data="user"/>
      <choice label="i18n:console-log-category-all" data="all"/>
      <description>i18n:console-log-category-description</description>
    </param>

    <param name="$showDate" label="i18n:console-show-date" type="Boolean" value="false" setting="true" binding="false" control="false">
      <description>i18n:console-show-date-description</description>
    </param>
    <param name="$showTime" label="i18n:console-show-time" type="Boolean" value="false" setting="true" binding="false" control="false">
      <description>i18n:console-show-time-description</description>
    </param>
    <param name="$showCat"  label="i18n:console-show-category" type="Boolean" value="false" setting="true" binding="false" control="false">
      <description>i18n:console-show-category-description</description>
    </param>
    <param name="$showType" label="i18n:console-show-type" type="Boolean" value="false" setting="true" binding="false" control="false">
	  <description>i18n:console-show-type-description</description>
    </param>
    <param name="$errorColor" label="i18n:console-color-error" type="Color" value="#FF0000" setting="true" binding="false" control="false">
      <description>i18n:console-color-error-description</description>
    </param>
    <param name="$warnColor" label="i18n:console-color-warn" type="Color" value="#0000FF" setting="true" binding="false" control="false">
      <description>i18n:console-color-warn-description</description>
    </param>
    <param name="$infoColor" label="i18n:console-color-info" type="Color" value="#000000" setting="true" binding="false" control="false">
      <description>i18n:console-color-info-description</description>
    </param>
  </inputs>

</widget>
