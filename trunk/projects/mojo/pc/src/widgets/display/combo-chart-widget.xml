<widget type="ComboChartWidget" label="i18n:comboChart-title">
  <description>
  i18n:Combo-Chart-Description
  </description>
  <metadata>
    <property refreshable="false" inspectable="true" actionable="true"/>
    <metadata passThru="$results"/>
  </metadata>
  <inputs>
    <param control="false" setting="false" label="i18n:comboChart-results" name="$results">
       <description>i18n:Chart-results-Description</description>
    </param>
    <param binding="false" type="MultiField" label="i18n:comboChart-fields" name="$fields">
       <description>i18n:Chart-fields-Description</description>
    </param>
    <param binding="false" type="MultiSeries" label="i18n:comboChart-series" name="series">
        <description>i18n:Chart-series-Description</description>
    </param>
    <param binding="false" type="MultiGroup" label="i18n:comboChart-axis-labels" name="labels">
       <description>i18n:X-axis-labels-Description</description>
    </param>
    <param binding="false" type="String" label="i18n:comboChart-series-values" name="values">
       <description>i18n:Chart-series-values-Description</description>
    </param>
    <param control="false" setting="true" label="i18n:comboChart-info" name="$info">
       <description>i18n:Chart-info-Description</description>
    </param>
    <param binding="false" type="Enumeration" label="i18n:comboChart-chart-legend" name="legend" style="true">
      <description>i18n:Chart-legend-Description</description>
      <choice label="i18n:comboChart-hide" data="false"/>
      <choice label="i18n:comboChart-show" data="true"/>
    </param>
    <param binding="false" type="ColorSet" label="i18n:comboChart-colors" name="colors" style="true">
       <description>i18n:Chart-colors-Description</description>
    </param>
    <param control="false" binding="false" value="0" min="0" max="5" type="Number" label="i18n:number-precision" name="numberPrecision" style="true">
      <description>i18n:Chart-number-presision-Description</description>
    </param>
    <param control="false" type="String" setting="true" label="i18n:upperThreshold-value" name="upperThreshold">
      <description>i18n:Chart-upperThreshold-value-Description</description>
    </param>
    <param control="false" type="String" setting="true" label="i18n:lowerThreshold-value" name="lowerThreshold">
      <description>i18n:Chart-lowerThreshold-value-Description</description>
    </param>
    <param control="false" binding="false" type="Style" label="Style" name="$style" style="true">
      <description>i18n:Chart-style-Description</description>
    </param>
    <param control="false" type="String" binding="false" label="Max Value" name="maxValue">
      <description>i18n:Y-Max-value-Description</description>
    </param>
    <param control="false" type="String" binding="false" label="Min Value" name="minValue">
      <description>i18n:Y-Min-value-Description</description>
    </param>
  </inputs>
  <outputs>
    <param label="i18n:comboChart-selected-row" name="selected" type="record">
       <description>i18n:Chart-selected-row-Description</description>
    </param>
    <param label="i18n:comboChart-selected-series" name="series">
       <description>i18n:Chart-selected-series-Description</description>
    </param>
  </outputs>
</widget>
