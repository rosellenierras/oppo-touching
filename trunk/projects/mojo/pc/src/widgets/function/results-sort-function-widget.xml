<widget type="ResultsSortFunctionWidget" label="i18n:resultsSort-title">
  <description>i18n:resultsSort-description</description>
  <metadata>
    <size width="100" height="40" type="fixed"/>
    <property frame="RoundedBox" visible="Never" visual="false" refreshable="false"/>
    <metadata passThru="$results"/>
  </metadata>
  <inputs>
    <param name="$operation" value="SORT" setting="false" binding="false" control="false"/>
    <param control="false" setting="false" label="i18n:resultsSort-input" name="$results">
      <description>i18n:resultsSort-input-desc</description>
    </param>
    <param binding="false" type="MultiField" label="i18n:resultsSort-sort-fields" name="$fields">
      <description>i18n:resultsSort-fields-desc</description>
    </param>
    <param binding="false" type="boolean" label="i18n:resultsSort-case-sensitive" name="$case-sensitive">
      <description>i18n:resultsSort-case-desc</description>
    </param>
    <param binding="false" type="boolean" label="i18n:resultsSort-ascending-order" name="$ascending-order">
      <description>i18n:resultsSort-order-desc</description>
    </param>
  </inputs>
  <outputs>
    <param setting="false" label="i18n:resultsSort-results" name="$results">
      <description>i18n:resultsSort-results-desc</description>
    </param>
  </outputs>
</widget>
